{
  "name": "realtime-chat-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for Realtime Chat Application",
  "main": "backend/src/index.js",
  "scripts": {
    "install:all": "pnpm install --dir backend && pnpm install --dir frontend",
    "build:frontend": "pnpm --dir frontend run build",
